// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String?  @unique
  password  String
  posts     Post[]
  profile   Profile?
}

model Post {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String?
  author    User    @relation(references: [id], fields: [authorId], onDelete: Cascade)
  authorId  String  @db.ObjectId
}

type Profile {
  firstName      String
  lastName       String
  username       String?
  profilePicture String?
  category       Category?
}

enum Category {

  Entrepreneur
  Marketing
  Sales
  Software_Developer
  Business
  Gamer
  Healthcare
  Artist
  Videography
  Photography
  Hardware_Developer
  Researcher
  Blogger
  Content_Creation

}